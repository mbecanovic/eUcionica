@page
@model eUcionica.Pages.PitanjaPage.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Izmeni pitanje</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pitanja.ID" />

            <div class="form-group">
                <label>Predmet</label>
                <input asp-for="Pitanja.IDPredmet" class="form-control" />
                <span asp-validation-for="Pitanja.IDPredmet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Oblast</label>
                <input asp-for="Pitanja.IDOblast" class="form-control" />
                <span asp-validation-for="Pitanja.IDOblast" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Nivo</label>
                <input asp-for="Pitanja.Nivo" class="form-control" />
                <span asp-validation-for="Pitanja.Nivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Pitanje</label>
                <textarea asp-for="Pitanja.Pitanje" class="form-control"></textarea>
                <span asp-validation-for="Pitanja.Pitanje" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Odgovor</label>
                <textarea asp-for="Pitanja.Odgovor" class="form-control"></textarea>
                <span asp-validation-for="Pitanja.Odgovor" class="text-danger"></span>
            </div>
            <h1></h1>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Sačuvaj</button>
                <h1></h1>
                <a asp-page="./Pitanja" class="btn btn-secondary">Vrati se nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
