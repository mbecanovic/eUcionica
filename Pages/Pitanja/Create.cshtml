@page
@model eUcionica.Pages.PitanjaPage.CreateModel

@{
    ViewData["Title"] = "Napravi zadatak";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Napravi pitanje</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Predmet</label>
                <select asp-for="Pitanja.IDPredmet" class="form-control" asp-items="ViewBag.IDPredmet"></select>
                <span asp-validation-for="Pitanja.IDPredmet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Oblast</label>
                <select asp-for="Pitanja.IDOblast" class="form-control" asp-items="ViewBag.IDOblast"></select>
                <span asp-validation-for="Pitanja.IDOblast" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Nivo</label>
                <select asp-for="Pitanja.Nivo" class="form-control" asp-items="ViewBag.Nivo"></select>
                <span asp-validation-for="Pitanja.Nivo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Pitanje</label>
                <input asp-for="Pitanja.Pitanje" class="form-control" />
                <span asp-validation-for="Pitanja.Pitanje" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Odgovor</label>
                <input asp-for="Pitanja.Odgovor" class="form-control" />
                <span asp-validation-for="Pitanja.Odgovor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <br />
                <input type="submit" value="Napravi novo pitanje" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-page="./Pitanja" class="btn btn-secondary">Vrati se nazad</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
